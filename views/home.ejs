<%- include('partials/header'); -%>
    <div class="content-container">
        <div class="content">
            <h2>"Write what should not be forgotten." - Isabel Allende</h2>
            <% arr.forEach(item => { %>
                <a href="/posts/<%=item._id%>" class="card-link">
                    <div class="blog">
                        <h3><%=item.title%></h3>
                        <p><em><%=item.date%></em></p>
                        <p><%=item.post%>
                     </p>
                    </div> 
                </a>           
             <% }) %>
        </div>
    </div>
</body>
</html>